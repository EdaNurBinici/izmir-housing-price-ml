# Auto detect text files and perform LF normalization
* text=auto

# Python files should always use LF
*.py text eol=lf

# Shell scripts should use LF
*.sh text eol=lf

# Windows scripts should use CRLF
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# YAML files should use LF
*.yml text eol=lf
*.yaml text eol=lf

# Markdown files should use LF
*.md text eol=lf

# Config files should use LF
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Don't modify binary files
*.pkl binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.zip binary
*.gz binary
*.tar binary
